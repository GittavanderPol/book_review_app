<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1><%= @book.title %></h1>
    <div>
      <%= link_to "Edit book", edit_book_path(@book), class: "btn btn-primary px-3" %>
      <%= link_to "Delete book", book_path(@book), data: { turbo_confirm: "Are you sure?", turbo_method: :delete }, class: "btn btn-danger px-3" %>
      <%= link_to "Cancel", books_path, class: "btn btn-outline-secondary order-md-1" %>
    </div>
  </div>
  <h2><%= @book.author.name %></h2>
</div>
