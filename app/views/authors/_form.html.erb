
<%= form_with model: @author do |form| %>
  <%= render partial: "authors/error_messages", locals: { author: @author } %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <%= form.submit class: "btn btn-primary order-md-2" %>
    <%= link_to "Cancel", :back, class: "btn btn-outline-secondary order-md-1" %>
  </div>
<% end %>
