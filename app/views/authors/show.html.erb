<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1><%= @author.name %></h1>
    <div>
      <%= link_to "Add new book", new_book_path(author_id: @author.id), class: "btn btn-primary px-3" %>
      <%= link_to "Edit author", edit_author_path(@author), class: "btn btn-primary px-3" %>
      <%= link_to "Delete author", author_path(@author), data: { turbo_confirm: "Are you sure?", turbo_method: :delete }, class: "btn btn-danger px-3" %>
      <%= link_to "Cancel", authors_path, class: "btn btn-outline-secondary order-md-1" %>
    </div>
  </div>
  <h2>Books</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
      </tr>
    </thead>
    <tbody>
      <% @author.books.each do |book| %>
        <tr>
          <th scope="row"><%= book.id %></th>
          <td><%= link_to book.title, book %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
